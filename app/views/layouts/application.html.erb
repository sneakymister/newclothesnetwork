<!DOCTYPE html>
<html>
<head>
  <title>New Clothes Network</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<h1>New Clothes Network</h1>

<div class="retail_pane">
	<div class="nav">
		<% if retailer_signed_in? %>
			<%= link_to 'New Post', new_retailer_post_path(current_retailer) %>
			<%= link_to 'Edit Retailer Information', edit_retailer_registration_path %>
			<%= link_to "Logout", destroy_retailer_session_path, method: :delete %>
		<% end %>
		<% if !retailer_signed_in? && !nonprofit_signed_in? %>
			<%= link_to "Retailer Sign Up", new_retailer_registration_path %>
			<%= link_to "Retailer Login", new_retailer_session_path %>
		<% end %>
	</div>
</div>

<div class="nonprofit_pane">
	<div class="nav">
		<% if nonprofit_signed_in? %>
			<%= link_to 'Edit Nonprofit Information', edit_nonprofit_registration_path %>
			<%= link_to "Logout", destroy_nonprofit_session_path, method: :delete %>
		<% end %>
		<% if !nonprofit_signed_in? && !retailer_signed_in? %>
			<%= link_to "Nonprofit Sign Up", new_nonprofit_registration_path %>
			<%= link_to "Nonprofit Login", new_nonprofit_session_path %>
		<% end %>
	</div>
</div>

<% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>

<%= yield %>

</body>
</html>