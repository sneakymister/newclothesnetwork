<% if nonprofit_signed_in? && !@post.nonprofit_id? %>
	<p><%= link_to 'Claim this stock!', retailer_post_claim_path(@retailer, @post), action: :claim, method: :put, data: {confirm: "Are you sure you want to claim this stock?  You'll be responsible for picking it up before #{@post.deadline}."} %></p>
<% end %>

<p>Description: <%= @post.description %></p>
<p>Clothing season: <%= @post.season.name %></p>
<p>Pickup deadline: <%= @post.deadline %></p>

<% if !nonprofit_signed_in? && retailer_signed_in? && @post.retailer_id == current_retailer.id %>
	<% if @post.nonprofit_id? %>
		<p>Waiting for pickup by: <%= @post.nonprofit.company_name %></p>
		<% if !@post.picked_up? %>
			<p><%= link_to 'Mark this stock as picked up', retailer_post_pickup_path(@retailer, @post), action: :pickup, method: :put %></p>
		<% end %>
	<% end %>
	<p><%= link_to 'Edit post details', edit_retailer_post_path(@retailer, @post) %></p>
	<p><%= link_to "Delete post", retailer_post_path(@retailer, @post), method: :delete, data: { confirm: "Are you sure you want to delete this post?"} %></p>
<% end %>
<p><%= link_to "Back to #{@retailer.company_name}'s postings", retailer_path(@retailer) %></p>